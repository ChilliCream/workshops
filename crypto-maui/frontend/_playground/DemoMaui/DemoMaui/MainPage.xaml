<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DemoMaui"
             xmlns:graphQl="clr-namespace:DemoMaui.GraphQL"
             x:DataType="local:MainPage"
             x:Class="DemoMaui.MainPage">
    
    <VerticalStackLayout>
        <Button Text="Next" Clicked="Button_OnClicked"></Button>
        <CollectionView 
            ItemsSource="{Binding AssetInfos}"
            RemainingItemsThreshold="10"
            RemainingItemsThresholdReached="ItemsView_OnRemainingItemsThresholdReached">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="graphQl:IAssetInfo">
                    <VerticalStackLayout>
                        <Label Text="{Binding Symbol }" FontAttributes="Bold"/>
                        <Label Text="{Binding Price.LastPrice }" FontAttributes="Italic"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
    
    
</ContentPage>
